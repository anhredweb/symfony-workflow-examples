{% extends 'base.html.twig' %}

{% block title %}Create a Workflow!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div>
    {% for name, state in workflows %}
        <form action="{{ path('create_workflow') }}" method="post">
            <input type="hidden" name="workflow_name" value="{{ name }}">
            <input type="hidden" name="starting_state" value="{{ state }}">
            <input type="submit" value="Create {{ name }}">
        </form>
    {% endfor %}
</div>
{% endblock %}
